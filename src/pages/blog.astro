      <li><a href="./posts/post-2">記事2</a></li>
      <li><a href="./posts/post-3">記事3</a></li> -->
			{
				allPosts.map((post) => (
					// <li>
					// 	<a href={`${post.url}`}>{post.frontmatter.title}</a>
					// </li>
				  <BlogPost url={post.url} title={post.frontmatter.title}/>
				))
			}

    </ul>
</BaseLauout>